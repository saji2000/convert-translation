[{"sura_num": 102, "verse_num": 0, "arabic_text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ", "english_text": "In the name of God, Most Gracious, Most Merciful", "persian_text": "به نام خدا، بخشنده ترين، مهربان ترين.", "subtitle": "", "footnote": "", "chapter_title_english": "Hoarding", "chapter_title_arabic": "التكاثر", "chapter_title_persian": "مال اندوزی"}, {"sura_num": 102, "verse_num": 1, "arabic_text": "أَلْهَىٰكُمُ ٱلتَّكَاثُرُ", "english_text": "You remain preoccupied with hoarding.", "persian_text": "شما به مال اندوزی سرگرم هستيد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 2, "arabic_text": "حَتَّىٰ زُرْتُمُ ٱلْمَقَابِرَ", "english_text": "Until you go to the graves.", "persian_text": "تا آنكه به گورها برويد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 3, "arabic_text": "كَلَّا سَوْفَ تَعْلَمُونَ", "english_text": "Indeed, you will find out.", "persian_text": "مسلماً، شما خواهيد فهميد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 4, "arabic_text": "ثُمَّ كَلَّا سَوْفَ تَعْلَمُونَ", "english_text": "Most assuredly, you will find out.", "persian_text": "بدون شك، خواهيد فهميد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 5, "arabic_text": "كَلَّا لَوْ تَعْلَمُونَ عِلْمَ ٱلْيَقِينِ", "english_text": "If only you could find out for certain.", "persian_text": "اگر فقط می توانستيد به يقين دريابيد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 6, "arabic_text": "لَتَرَوُنَّ ٱلْجَحِيمَ", "english_text": "You would envision Hell.", "persian_text": "دوزخ را مجسم می كرديد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 7, "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيْنَ ٱلْيَقِينِ", "english_text": "Then you would see it with the eye of certainty.", "persian_text": "آنگاه آن را با چشم يقين می ديديد.", "subtitle": "", "footnote": ""}, {"sura_num": 102, "verse_num": 8, "arabic_text": "ثُمَّ لَتُسْـَٔلُنَّ يَوْمَئِذٍ عَنِ ٱلنَّعِيمِ", "english_text": "Then you will be questioned, on that day, about the blessings you had enjoyed.", "persian_text": "سپس در آن روز، دربارهٔ نعمت هايی كه از آن بهره مند بوديد، از شما سئوال خواهد شد.", "subtitle": "", "footnote": ""}]