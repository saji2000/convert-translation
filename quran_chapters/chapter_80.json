[{"sura_num": 80, "verse_num": 0, "arabic_text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ", "english_text": "In the name of God, Most Gracious, Most Merciful", "persian_text": "به نام خدا، بخشنده ترين، مهربان ترين.", "subtitle": "", "footnote": "", "chapter_title_english": "He Frowned", "chapter_title_arabic": "عبس", "chapter_title_persian": "چهره درهم کشيد"}, {"sura_num": 80, "verse_num": 1, "arabic_text": "عَبَسَ وَتَوَلَّىٰٓ", "english_text": "He (Muhammad) frowned and turned away.", "persian_text": "او (محمد) چهره درهم كشيد و روی گرداند.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 2, "arabic_text": "أَن جَآءَهُ ٱلْأَعْمَىٰ", "english_text": "When the blind man came to him.", "persian_text": "هنگامی كه آن مرد نابينا نزدش آمد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 3, "arabic_text": "وَمَا يُدْرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ", "english_text": "How do you know? He may purify himself.", "persian_text": "تو چه می دانی؟ شايد او خود را خالص كند.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 4, "arabic_text": "أَوْ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكْرَىٰٓ", "english_text": "Or he may take heed, and benefit from the message.", "persian_text": "يا آنكه توجه كند و از پيام بهره مند شود.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 5, "arabic_text": "أَمَّا مَنِ ٱسْتَغْنَىٰ", "english_text": "As for the rich man.", "persian_text": "و اما آن مرد ثروتمند.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 6, "arabic_text": "فَأَنتَ لَهُۥ تَصَدَّىٰ", "english_text": "You gave him your attention.", "persian_text": "تو به او توجه كردی.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 7, "arabic_text": "وَمَا عَلَيْكَ أَلَّا يَزَّكَّىٰ", "english_text": "Even though you could not guarantee his salvation.", "persian_text": "با آنكه تو نمی توانستی نجات او را تضمين كنی.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 8, "arabic_text": "وَأَمَّا مَن جَآءَكَ يَسْعَىٰ", "english_text": "The one who came to you eagerly.", "persian_text": "آن كسی كه مشتاقانه نزد تو آمد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 9, "arabic_text": "وَهُوَ يَخْشَىٰ", "english_text": "And is really reverent.", "persian_text": "و حقيقتاً حرمت گزار است.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 10, "arabic_text": "فَأَنتَ عَنْهُ تَلَهَّىٰ", "english_text": "You ignored him.", "persian_text": "تو به او اعتنا نكردی.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 11, "arabic_text": "كَلَّآ إِنَّهَا تَذْكِرَةٌ", "english_text": "Indeed, this is a reminder.", "persian_text": "حقيقتاً، اين تذكری است.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 12, "arabic_text": "فَمَن شَآءَ ذَكَرَهُۥ", "english_text": "Whoever wills shall take heed.", "persian_text": "هر كه بخواهد، توجه خواهد كرد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 13, "arabic_text": "فِى صُحُفٍ مُّكَرَّمَةٍ", "english_text": "In honorable scriptures.", "persian_text": "در كتاب های آسمانی محترم.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 14, "arabic_text": "مَّرْفُوعَةٍ مُّطَهَّرَة", "english_text": "Exalted and pure.", "persian_text": "بلندمرتبه و خالص.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 15, "arabic_text": "بِأَيْدِى سَفَرَةٍ", "english_text": "(Written) by the hands of messengers.", "persian_text": "(نوشته شده) به دست رسولان.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 16, "arabic_text": "كِرَام بَرَرَةٍ", "english_text": "Who are honorable and righteous.", "persian_text": "كه محترم و پرهيزكار هستند.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 17, "arabic_text": "قُتِلَ ٱلْإِنسَٰنُ مَآ أَكْفَرَهُۥ", "english_text": "Woe to the human being; he is so unappreciative!", "persian_text": "وای بر انسان؛ او بسيار ناسپاس است!", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 18, "arabic_text": "مِنْ أَىِّ شَىْءٍ خَلَقَهُۥ", "english_text": "What did He create him from?", "persian_text": "او از چه چيز وی را آفريد؟", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 19, "arabic_text": "مِن نُّطْفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ", "english_text": "From a tiny drop, He creates him and designs him.", "persian_text": "از قطره ای كوچك، او را می آفريند و طراحی می كند.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 20, "arabic_text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ", "english_text": "Then He points out the path for him.", "persian_text": "سپس، راه را به او نشان می دهد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 21, "arabic_text": "ثُمَّ أَمَاتَهُۥ فَأَقْبَرَهُۥ", "english_text": "Then He puts him to death, and into the grave.", "persian_text": "سپس، او را می ميراند و در گور می نهد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 22, "arabic_text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ", "english_text": "When He wills, He resurrects him.", "persian_text": "او هرگاه بخواهد وی را برمی انگيزد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 23, "arabic_text": "كَلَّا لَمَّا يَقْضِ مَآ أَمَرَهُۥ", "english_text": "He shall uphold His commandments.", "persian_text": "بايد از احكام او پيروی كند.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 24, "arabic_text": "فَلْيَنظُرِ ٱلْإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ", "english_text": "Let the human consider his food!", "persian_text": "بگذار انسان غذای خود را در نظر بگيرد!", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 25, "arabic_text": "أَنَّا صَبَبْنَا ٱلْمَآءَ صَبًّا", "english_text": "We pour the water generously.", "persian_text": "ما آب را سخاوتمندانه فرو می ريزيم.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 26, "arabic_text": "ثُمَّ شَقَقْنَا ٱلْأَرْضَ شَقًّا", "english_text": "Then we split the soil open.", "persian_text": "سپس خاك را می شكافيم.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 27, "arabic_text": "فَأَنۢبَتْنَا فِيهَا حَبًّا", "english_text": "We grow in it grains.", "persian_text": "در آن دانه ها را می رويانيم.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 28, "arabic_text": "وَعِنَبًا وَقَضْبًا", "english_text": "Grapes and pasture.", "persian_text": "انگورها و علفزارها.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 29, "arabic_text": "وَزَيْتُونًا وَنَخْلًا", "english_text": "Olives and palms.", "persian_text": "زيتون ها و نخل ها.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 30, "arabic_text": "وَحَدَآئِقَ غُلْبًا", "english_text": "A variety of orchards.", "persian_text": "انواع باغ های ميوه.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 31, "arabic_text": "وَفَٰكِهَةً وَأَبًّا", "english_text": "Fruits and vegetables.", "persian_text": "ميوه ها و سبزيجات.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 32, "arabic_text": "مَّتَٰعًا لَّكُمْ وَلِأَنْعَٰمِكُمْ", "english_text": "To provide life support for you and your animals.", "persian_text": "تا وسيلهٔ معاش شما و حيوانات شما را فراهم كنيم.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 33, "arabic_text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ", "english_text": "Then, when the blow comes to pass.", "persian_text": "سپس، هنگامی كه بانگ فرا رسد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 34, "arabic_text": "يَوْمَ يَفِرُّ ٱلْمَرْءُ مِنْ أَخِيهِ", "english_text": "That is the day when one flees from his brother.", "persian_text": "اين همان روزی است كه هر شخصی از برادرش می گريزد.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 35, "arabic_text": "وَأُمِّهِۦ وَأَبِيهِ", "english_text": "From his mother and father.", "persian_text": "از پدر و مادرش.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 36, "arabic_text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ", "english_text": "From his spouse and children.", "persian_text": "از همسر و فرزندانش.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 37, "arabic_text": "لِكُلِّ ٱمْرِئٍ مِّنْهُمْ يَوْمَئِذٍ شَأْنٌ يُغْنِيهِ", "english_text": "Each one of them, on that day, worries about his own destiny.", "persian_text": "در آن روز، هر يك از آنها نگران سرنوشت خويش است.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 38, "arabic_text": "وُجُوهٌ يَوْمَئِذٍ مُّسْفِرَةٌ", "english_text": "Some faces on that day will be happy.", "persian_text": "در آن روز، برخی از چهره ها خوشحال خواهند بود.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 39, "arabic_text": "ضَاحِكَةٌ مُّسْتَبْشِرَةٌ", "english_text": "Laughing and joyful.", "persian_text": "خندان و شادان.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 40, "arabic_text": "وَوُجُوهٌ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٌ", "english_text": "Other faces, on that day, will be covered with misery.", "persian_text": "در آن روز، چهره های ديگر پوشيده از بدبختی خواهند بود.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 41, "arabic_text": "تَرْهَقُهَا قَتَرَةٌ", "english_text": "Overwhelmed by remorse.", "persian_text": "سراپا پشيمان.", "subtitle": "", "footnote": ""}, {"sura_num": 80, "verse_num": 42, "arabic_text": "أُولَٰٓئِكَ هُمُ ٱلْكَفَرَةُ ٱلْفَجَرَةُ", "english_text": "These are the wicked disbelievers.", "persian_text": "اينان كافرانی پليد هستند.", "subtitle": "", "footnote": ""}]