[{"sura_num": 104, "verse_num": 0, "arabic_text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ", "english_text": "In the name of God, Most Gracious, Most Merciful", "persian_text": "به نام خدا، بخشنده ترين، مهربان ترين.", "subtitle": "", "footnote": "", "chapter_title_english": "The Backbiter", "chapter_title_arabic": "الهمزة", "chapter_title_persian": "غيبت کننده"}, {"sura_num": 104, "verse_num": 1, "arabic_text": "وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ", "english_text": "Woe to every backbiter, slanderer.", "persian_text": "وای بر هر غيبت كنندهٔ تهمت زن.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 2, "arabic_text": "ٱلَّذِى جَمَعَ مَالًا وَعَدَّدَهُۥ", "english_text": "He hoards money and counts it.", "persian_text": "او مال اندوزی می كند و آن را می شمارد.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 3, "arabic_text": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ", "english_text": "As if his money will make him immortal.", "persian_text": "چنان كه گويی پولش او را جاودانه خواهد كرد.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 4, "arabic_text": "كَلَّا  لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ", "english_text": "Never; he will be thrown into the Devastator.", "persian_text": "هرگز؛ او به درون آن ويران كننده پرتاب خواهد شد.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 5, "arabic_text": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ", "english_text": "Do you know what the Devastator is?", "persian_text": "آيا می دانی ويران كننده چيست؟", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 6, "arabic_text": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ", "english_text": "GOD's blazing Hellfire.", "persian_text": "شعلهٔ سوزان دوزخ خدا.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 7, "arabic_text": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ", "english_text": "It burns them inside out.", "persian_text": "آنها را از درون به بيرون می سوزاند.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 8, "arabic_text": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ", "english_text": "They will be confined therein.", "persian_text": "آنها در آنجا محبوس خواهند بود.", "subtitle": "", "footnote": ""}, {"sura_num": 104, "verse_num": 9, "arabic_text": "فِى عَمَدٍ مُّمَدَّدَة", "english_text": "In extended columns.", "persian_text": "در صف های طويل.", "subtitle": "", "footnote": ""}]